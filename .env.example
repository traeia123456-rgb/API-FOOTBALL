# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Turnstile Configuration
# For development, use test key: 1x00000000000000000000AA
# For production, get your keys from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
# Set to true to disable Turnstile (for testing)
NEXT_PUBLIC_DISABLE_TURNSTILE=false

# API Football Configuration (Teams, Leagues, Players, etc.)
RAPIDAPI_FOOTBALL_BASE_URL=https://api-football-v1.p.rapidapi.com/v3
RAPIDAPI_FOOTBALL_API_KEY=your_rapidapi_football_key_here
RAPIDAPI_FOOTBALL_HOST=api-football-v1.p.rapidapi.com

# BetsAPI Configuration (Betting, In-Play Data)
RAPIDAPI_BETS_BASE_URL=https://betsapi2.p.rapidapi.com/v1
RAPIDAPI_BETS_API_KEY=your_rapidapi_bets_key_here
RAPIDAPI_BETS_HOST=betsapi2.p.rapidapi.com
